{{#if siteSettings.thumbnail_toggle_enabled}}
  {{#if context.currentUser.admin}}
    <div class="topic-thumbnail-toggle" data-topic-id="{{context.topic.id}}">
      {{#if context.topic.tlp_show_thumbnail}}
        <button class="btn-icon toggle-thumbnail-btn" 
                title="隱藏縮圖" 
                onclick="toggleThumbnail({{context.topic.id}})">
          <i class="d-icon d-icon-far-image"></i>
        </button>
      {{else}}
        <button class="btn-icon toggle-thumbnail-btn" 
                title="顯示縮圖" 
                onclick="toggleThumbnail({{context.topic.id}})">
          <i class="d-icon d-icon-far-image-slash"></i>
        </button>
      {{/if}}
    </div>
  {{/if}}
{{/if}} 